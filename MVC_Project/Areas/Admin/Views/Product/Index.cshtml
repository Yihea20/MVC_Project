@model List<Product>
<div>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>Create New Product
            </a>
        </div>
    </div>

</div>
<table class="table table-bordered table-striped" >
    <thead>
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Price</th>
            <th>Author</th>
            <th>Category</th>
            <th>ChecK</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product c in Model)
        {
            <tr>
                <td>@c.Title</td>
                <td>@c.ISBN</td>
                <td>@c.ListPrice</td>
                <td>@c.Author</td>
                <td>@c.Category.Name</td>
                <td>@c.Used</td>
                <td><div class="w-75 btn-group" role="group">
                    @if(!c.Used||c.CurrentUserId==CurrentUserId.CurrentId){
                        <a asp-controller="Product" asp-action="Upsert" asp-route-id="@c.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit </a>
                        }<a asp-controller="Product" asp-action="Download" asp-route-id="@c.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Download </a>

                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@c.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3-fill"></i>Delete </a>
                    </div>
                </td>
         
            </tr>
        }
    </tbody>
</table>
